---
Language: Cpp
BasedOnStyle: LLVM

# --- INDENTAÇÃO E TABULAÇÃO ---
IndentWidth: 4
TabWidth: 4
UseTab: Never # Usa espaços para manter o alinhamento em qualquer editor
ContinuationIndentWidth: 8
IndentCaseLabels: true

# --- LOOPS E BLOCOS CURTOS (O que você pediu) ---
AllowShortLoopsOnASingleLine: true
AllowShortBlocksOnASingleLine: Always
AllowShortIfStatementsOnASingleLine: true
AllowShortFunctionsOnASingleLine: All

# --- CHAVES (BRACES) ---
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false # Mantém a chave na mesma linha do if/while
  AfterFunction: false         # Mantém a chave na mesma linha da função
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false            # Mantém o else na mesma linha da chave: } else {
  IndentBraces: false

# --- ESPAÇAMENTOS ---
SpaceBeforeParens: ControlStatements # Coloca espaço: if (x)
SpaceBeforeAssignmentOperators: true
SpaceAfterCStyleCast: true
SpacesInContainerLiterals: false
PointerAlignment: Right              # Padrão C: int *ptr;

# --- ORGANIZAÇÃO ---
ColumnLimit: 120
SortIncludes: true
IncludeCategories:
  - Regex: "^<.*"
    Priority: 1
  - Regex: '^".*'
    Priority: 2

# clang-format -i *.c